        <h2 class="title">Error</h2>
        <p class="copy">Something went Wrong</p>
      </div>
      <div>
        <img src="/Images/404.svg" alt="">
      </div>
    </div>
    <% } %>

    <div id="shape1"></div>
    <div id="shape2"></div>
    <div id="shape3"></div>
