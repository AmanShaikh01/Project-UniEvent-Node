<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header") %>
  <body>
    <%- include("partials/nav") %> 
    <% if (user) { %>
    <div id="home">
      <div>
        <h2 class="title"><%= event.title %></h2>
        <p class="copy"><%= event.date %></p>
        <p class="copy"><%= event.Time %></p>
      </div>
      <div>
        <img src="<%= event.poster %>" alt="">
